extends ../layout.jade

block content
    .welcome= tr('login_welcome')
    hr
    if !signed
        form.loginform(action="/comp/login" method="POST")
            table
                tr
                    td 
                        label.formlabel(for='username')= tr('login_username')
                    td
                        input#username.formtext(type='text' name="username")
                tr
                    td
                        label.formlabel(for='password')= tr('login_password')
                    td
                        input#password.formtext(type='password' name="password")
                tr
                    td.cmd
                        input.submit(type="submit" value=tr('login_submit'))
    else
        .response OK
