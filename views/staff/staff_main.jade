extends ../layout.jade

append links
    link(rel='stylesheet', href='/stylesheets/staffMain.css')

append scripts
    script(src= "/javascripts/showHideRate.js")
    script.
        $(function initEvent(){
            $('.punchReport').on('click', function(){
                location.href = "/recentRecords";
            });

            $('.logout').on('click', function(){
                location.href = "/logout";
            });
        });


block content
    .staffMainPage(ontouchstart="")
        //.userInfo
        .avatar
            img(src="/images/yongred.jpg" alt="User Avatar") 
            p= tr('welcome') + " " + user.name
            //.acctInfo
                pre.
                    Company: #{user.compid}
                    User Account: #{user.email}
                    User ID: #{user.userid}
                    User Name: #{user.name}
                    Gender: #{user.sex}
                    Date Enrolled: #{user.createDate}
                    Address: #{user.address}

        .paidRate
            .paidRateBox
                span.text= tr('paidrate')
            .paidRateBox
                .hourRate.hidden
                    span.number
                        $#{user.curRate} #{tr('per_hour')}
                .imageCover

            .paidRateBox.showHideRate.noselect
                span= tr('hiderate')
                    
               
        .otherInfoLinks.noselect
            .punchReport.otherInfo= tr('punchReport')
            .logout.otherInfo= tr('logout')
            if false
                .wageReport.otherInfo= tr('wageReport')

                .setting.otherInfo
                    a(href= "/user/setting") Setting
                .delegate.otherInfo
                    if delegate
                        a(href= "/user/delegate") Delegate
