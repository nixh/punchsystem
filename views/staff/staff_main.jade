extends ../layout.jade

prepend links
	link(rel='stylesheet', href='/stylesheets/yongredStyle.css')
block content
	.staffMainPage
		.userInfo
			.avatar
				img(src="/images/yongred.jpg" alt= user.avatar)
			.acctInfo
				p.
					User Account: #{user.email}
		.paidRate
			.paidRateLabel Paid Rate:
			.paidRateClick Show Rate
			.paidRateDisplay #{user.curRate}

		.otherInfoLinks
			.punchReport.otherInfo
				a(href= "/user/selfreport/punch") Punch Report
			.wageReport.otherInfo
				a(href= "/user/selfreport/wage") Wage Report
		
			.setting.otherInfo
				a(href= "/user/setting") Setting
			.delegate.otherInfo
				if delegate
					a(href= "/user/delegate") Delegate
