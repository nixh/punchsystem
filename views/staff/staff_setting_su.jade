    script.

          function getObj(id){
                var Obj = document.getElementById(id).value;
                return Obj;
          }
          function checkpwd(){
                var oldPass = $("#oldpass");
                var newPass = $("#newpass"); 
                var confirmPass = $("#confirmpass");
                var submittable = true;
                var oldValid = true;
                var newValid = true;
                var conValid = true;

                if(oldPass.val() === ""){
                    oldPass.addClass("inputError");
                    oldValid = false;
                    submittable = false;
                }
                if(newPass.val() === ""){
                    newPass.addClass("inputError");
                    newValid = false;
                    submittable = false;
                }
                if(confirmPass.val() === ""){
                    confirmPass.addClass("inputError");
                    conValid = false;
                    submittable = false;
                }

                if(newPass.val() !== confirmPass.val()){
                    newPass.addClass("inputError");
                    confirmPass.addClass("inputError");
                    newValid = false;
                    conValid = false;
                    submittable = false;
                }

                if(oldValid){
                    oldPass.removeClass("inputError");
                }

                if(newValid){
                    newPass.removeClass("inputError");
                }

                if(conValid){
                    confirmPass.removeClass("inputError");
                }
 
                return submittable;
          }

          function checkemail(){
                if(getObj("receiveEmails")==""){
                        //alert("未输入email");
                        document.getElementById("receiveEmails").focus;
                        return false;//false:阻止提交表单
                }   
          }
          function checkrate(){
                if(getObj("overtime")==""||getObj("newrate")==""){
                        //alert("未设置 rate");
                        document.getElementById("overtime").focus;
                        document.getElementById("newrate").focus;
                        return false;//false:阻止提交表单
                }   
          }
    
